# PHP Security Scanner - Environment Variables
# Copy to .env and configure

# Scanning
SCAN_VULN_TYPES=sql_injection,xss,rce,file_inclusion
SCAN_MAX_FILE_SIZE=10485760

# Cache
CACHE_ENABLED=true
CACHE_BACKEND=disk
REDIS_URL=redis://localhost:6379/0

# Database
DB_ENABLED=true
DATABASE_URL=sqlite:///scanner.db

# API
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=8000

# Performance
MAX_WORKERS=32

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/php-scanner/scanner.log

# Optional: Configuration file path
# CONFIG_PATH=/etc/php-scanner/config.yaml
